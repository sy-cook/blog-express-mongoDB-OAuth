<%- include("partials/header") -%> 

<h1>Home</h1>
<p><%= homeParagraph %> </p>

<% if (posts.length !== 0) { posts.forEach(function(post) { %>
    <div>
        <h2><%= post.title %></h2>
        <!-- Truncate the content to 100 characters -->
        <p>
            <%= post.content.substring(0, 100) + "..." %>
            <a href="/posts/<%=post._id%>">Read More</a>
        </p>
    </div>
<% })} else { %>
    <div></div>
<% } %> 

<%- include("partials/footer") -%> 